<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="76dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"

            app:toolbarId="@+id/toolbar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar2"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme" />

            <ImageButton
                android:id="@+id/imageBtnVolver"
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:background="?attr/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.041"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4"
                app:srcCompat="@drawable/baseline_arrow_back_24" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView2"
        android:layout_width="match_parent"


        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNormas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Normas:"
                android:textAlignment="center"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40px" />

            <TextView
                android:id="@+id/ObjetivoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-Objetivo del juego:" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20px" />

            <TextView
                android:id="@+id/Objetivo1Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Un jugador:" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10px" />

            <TextView
                android:id="@+id/Descripcion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="En el mankala se puede jugar en modo solitario, para ello el jugador deberá intentar llevar todas las fichas o &quot;piedras&quot; a su propia base o &quot;Mankala&quot;." />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30px" />

            <TextView
                android:id="@+id/Objetivo2Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dos jugadores:" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10px" />

            <TextView
                android:id="@+id/Descripcion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Al mankala también se puede jugar entre dos personas de forma competitiva, para ello ambos jugadores intentarán acummular el mayor numero de puntos antes de que la partida acabe." />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40px" />

            <TextView
                android:id="@+id/ModoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-Modo de juego:" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20px" />

            <TextView
                android:id="@+id/Modo1Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Un jugador:" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10px" />

            <TextView
                android:id="@+id/Descripcion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="El juego consta de 5 botones o &quot;cuencos&quot;, al pulsar uno de ellos las fichas se irán distribullendo una a una en los cuencos adyacentes hacia la derecha incluido el &quot;mankala&quot;." />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10px" />

            <TextView
                android:id="@+id/Descripcion4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Las piedras acumuladas en el mankala quedarán allí sin posivilidad de ser mobidas de ninguna forma, convirtiendose de este modo en los puntos conseguidos." />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10px" />

            <TextView
                android:id="@+id/Descripcion5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Si la última piedra cae en un cuenco vacio en ese momento el juego se terminará, de otro modo, si el cuenco en el que cae la última piedra ya contaba con una o mas antes este se convertirá ahora en el único cuenco utilizable." />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10px" />

            <TextView
                android:id="@+id/Descripcion6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Si de otra forma la última piedra cae en el mankala el jugador podrá determinar que bol utilizar en el próximo movimiento." />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10px" />

            <TextView
                android:id="@+id/Descripcion7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Al llegar al cuenco mas a la derecha, es decir la zona de puntos determinada mankala, si aun quedan puntos por distribuir se empezará de nuevo desde el primer bol mas a la derecha." />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30px" />

            <TextView
                android:id="@+id/Modo2Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dos jugadores:" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>